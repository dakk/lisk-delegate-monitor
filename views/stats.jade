div.row
				div.col-md-3
					div.panel.panel-success
						div.panel-heading
							div.row
								div.col-md-4
									span(style="font-size: 300%; color: #fff").glyphicon.text-primary.glyphicon-user
								div.col-md-8
									span Delegates
									br
									span= stats.delegates
									span &nbsp;(
									span= stats.outsides
									span &nbsp; outside)

				div.col-md-3
					div.panel.panel-warning
						div.panel-heading
							div.row
								div.col-md-4
									span(style="font-size: 300%; color: #fff").glyphicon.text-primary.glyphicon-plus
								div.col-md-8
									span
										span= stats.coin
										span Sum
									br
									span= stats.shift

				div.col-md-2
					div.panel.panel-info
						div.panel-heading
							div.row
								div.col-md-4
									span(style="font-size: 300%; color: #fff").glyphicon.text-primary.glyphicon-book
								div.col-md-8
									span Mined
									br
									span= stats.mined

				div.col-md-2
					div.panel.panel-info
						div.panel-heading
							div.row
								div.col-md-4
									span(style="font-size: 300%; color: #fff").glyphicon.text-primary.glyphicon-sort-by-attributes-alt
								div.col-md-8
									span Height
									br
									span= height

				div.col-md-2
					div.panel.panel-danger
						div.panel-heading
							div.row
								div.col-md-4
									span(style="font-size: 300%; color: #fff").glyphicon.text-primary.glyphicon-alert
								div.col-md-8
									span Red state
									br
									span= stats.notalive

table.table.table-striped.table-condensed.table-hover
				tr
					th Rank
					th Username
					th Productivity
					th Approval
					th Mined (missed)
					th Balance
					th Status

				each d in delegates
					tr
						td= d.rate
						td= d.username
						td= d.productivity
						td= d.approval
						td
							span= d.producedblocks
							span &nbsp;(
							span= d.missedblocks
							span )
						td= balances[d.address]
						td
							if alive[d.address] == true
								span(style="color: #009900").glyphicon.text-primary.glyphicon-ok
							else
								span(style="color: #990000").glyphicon.text-primary.glyphicon-remove


				each d in outsides
					tr
						td= d.rate
						td= d.username
						td= d.productivity
						td= d.approval
						td
							span= d.producedblocks
							span &nbsp;(
							span= d.missedblocks
							span )
						td= balances[d.address]
						td
							span(style="color: #f39c12").glyphicon.text-primary.glyphicon-minus-sign
							
				each addr in addresses
					tr
						td &nbsp;
						td= addr
						td &nbsp;
						td &nbsp;
						td &nbsp;
						td= balances[addr]
						td
							span(style="color: #3498db").glyphicon.text-primary.glyphicon-eye-open

hr
h2 Votes

table.table.table-striped.table-condensed.table-hover
	each row in votes
		tr
			each cell in row
				td(align="center")
					if cell == true
						span(style="color: #009900").glyphicon.text-primary.glyphicon-ok
					if cell == false
						span(style="color: #990000").glyphicon.text-primary.glyphicon-remove
					if cell != false && cell != true
						span= cell
							
